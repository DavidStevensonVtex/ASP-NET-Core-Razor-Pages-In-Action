@* Listing 6.3 The form for the Create Property page, using tag helpers in the Create.cshtml file in the Pages/PropertyManager folder *@

@page
@model CityBreaks.Pages.PropertyManager.CreateModel
@{
}
@{
    ViewData["Title"] = "Create Property";
}

<form method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="MaxNumberOfGuests">Max Number of Guests</label>
        <input class="form-control" asp-for="MaxNumberOfGuests" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="DayRate">Day Rate</label>
        <input class="form-control" asp-for="DayRate" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="AvailableFrom">Available From</label>
        <input class="form-control" asp-for="AvailableFrom" />
        @* <input class="form-control" asp-for="AvailableFrom" asp-format="{0:yyyy-MM-ddTHH:mm}" /> *@
    </div>
    <div class="mb-3">
        <label asp-for="SmokingPermitted">Smoking Permitted</label>
        <input asp-for="SmokingPermitted" />
    </div>
    <div class="mb-3">
        <button class="btn btn-primary">Submit</button>
    </div>
</form>